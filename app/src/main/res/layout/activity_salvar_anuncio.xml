<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Anunciante.SalvarAnuncio">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_down"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="4dp"
        android:elevation="1dp"
        app:lottie_autoPlay="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_animation"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="16dp"
        android:elevation="1dp"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <LinearLayout
        android:id="@+id/ll_loading_NA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLNA"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Anuncio Salvo com sucesso!"
            android:textAlignment="center"
            android:textColor="@color/tabBackground"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnMenuPrincipalAnunc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bordas_verdes"
            android:text="Clique para ver seus anuncios"
            android:textColor="@color/fundo"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>
