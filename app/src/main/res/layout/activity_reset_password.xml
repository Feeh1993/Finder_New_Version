<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo2"
    tools:context=".Activity.Anunciante.CriarContaAnunciante">

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/tabTitle"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Recupere a senha"
                    android:textAlignment="center"
                    android:textColor="@color/tabBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal|center"
                    android:orientation="horizontal"
                    android:paddingEnd="30dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|center"
                    android:orientation="horizontal"
                    android:paddingEnd="30dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5">

                        <EditText
                            android:id="@+id/edtEmailRecuperar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/padd_10"
                            android:layout_marginStart="@dimen/padd_10"
                            android:layout_marginTop="@dimen/padd_10"
                            android:background="@drawable/selector_bg_edit"
                            android:hint="Digite seu email cadastrado"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="2dp"
                            android:textColor="@color/tabBackground_selected"
                            android:textColorHint="@color/tabBackground_selected"
                            android:textCursorDrawable="@drawable/bg_input_cursor"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnRecuperarSenha"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/bordas_laranja"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="Recuperar Acesso"
                    android:textColor="@color/tabBackground"></Button>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:paddingTop="10dp">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progressBarReset"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            app:indicatorColor="@color/tabBackground"
            app:indicatorName="BallPulseIndicator" />
    </FrameLayout>

</RelativeLayout>
